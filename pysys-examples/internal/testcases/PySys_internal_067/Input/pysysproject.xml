<?xml version="1.0" standalone="yes"?>
<pysysproject>
	<property environment="env"/>

	<property osfamily="osfamily"/>

	<property name="verboseWaitForSignal" value="true"/>
	<property name="defaultAbortOnError" value="true"/>

	<path value="${root}/extrapath"/>
	<formatters>
		<formatter name="stdout" messagefmt="%(levelname)-5s %(message)s" datefmt="%H:%M:%S" classname="mypkg.customfmt.CustomFormatter"> 
			<option name="color:dumped core">YELLOW</option>
			<option name="color">false</option> <!-- can be overridden by env var -->
		</formatter>
	</formatters>
	
</pysysproject>
