<pysysproject>

	<!-- Get a reference to the environment -->
	<property environment="env"/>

	<!-- Get a reference to the osfamily -->
	<property osfamily="osfamily"/>

	<!-- Import properties from file - fails silently if does not exist -->
	<property file="${osfamily}.properties" />
	
	<!-- Get the user name from the environemnt - default to Test User -->
	<property name="user" value="${env.USERNAME}" default="Test User"/>

	<!-- Set the test writers -->
	<writers>
		<writer classname="XMLFileResultsWriter" module="pysys.writer" file="testsummary.xml">
			<!--  Set properties on the writer class 
			<property name="stylesheet" value="./pysyslog.xls"/>
			-->
		</writer>	
		<writer classname="LogFileResultsWriter" module="pysys.writer" file="testsummary.log"/>
	</writers>		
</pysysproject>